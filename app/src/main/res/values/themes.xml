<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme for Vibe Streams -->
    <style name="Theme.Vibe_Streams.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/card_bg</item>

        <!-- Secondary / Accent Colors -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_accent</item>
        <item name="colorOnSecondary">@color/card_bg</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/bg_main</item>
        <item name="colorSurface">@color/card_bg</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/blue_primary</item>
        <item name="android:navigationBarColor">@color/bg_main</item>

        <!-- AppBar / Toolbar color -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar</item>
    </style>

</resources>
